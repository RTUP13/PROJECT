Génération dynamique du html :

#! /usr/bin/python
# -*- coding:utf-8 -*-

import json

utilisateur_dict = {"nom_utilisateur": "mygem"}
temperature_dict = {"temperature": "30"}
memoire_dict = {"memoire": "20"}
temps_connexion_dict = {"temps_connexion": "5054"}

nom_utilisateur_json = json.dumps(utilisateur_dict)
temperature_json = json.dumps(temperature_dict)
memoire_json = json.dumps(memoire_dict)
temps_connexion_json = json.dumps(temps_connexion_dict)

utilisateur_dict = json.loads(nom_utilisateur_json)
temperature_dict = json.loads(temperature_json)
memoire_dict = json.loads(memoire_json)
temps_connexion_dict = json.loads(temps_connexion_json)

nom_utilisateur = utilisateur_dict["nom_utilisateur"]
temperature = temperature_dict["temperature"]
memoire = memoire_dict["memoire"]
temps_connexion = temps_connexion_dict["temps_connexion"]

from flask import Flask, render_template

app = Flask(__name__)

@app.route('/')
def fiche():
    return render_template('fiche.html', nom_utilisateur=nom_utilisateur, temperature=temperature, memoire=memoire, temps_connexion=temps_connexion)

if __name__ == '__main__':
    app.run(debug=True)

